			     <product_description_src><![CDATA[short_description]]></product_description_src>
			     <product_description_strip_tags><![CDATA[0]]></product_description_strip_tags>
			     <product_image_disp><![CDATA[1]]></product_image_disp>
			     <product_image_height><![CDATA[85]]></product_image_height>
			     <product_image_width><![CDATA[80]]></product_image_width>
			     <product_price_disp><![CDATA[1]]></product_price_disp>
			     <product_rating_summary><![CDATA[1]]></product_rating_summary>
			     <product_title_disp><![CDATA[1]]></product_title_disp>
			     <product_title_max_length><![CDATA[25]]></product_title_max_length>
			</product_display_setting>
			<product_selection>
			     <num_columns><![CDATA[1]]></num_columns>
			     <product_category><![CDATA[39]]></product_category>
			     <product_limitation><![CDATA[4]]></product_limitation>
			     <product_order_by><![CDATA[best_sales]]></product_order_by>
			     <product_order_dir><![CDATA[desc]]></product_order_dir>
