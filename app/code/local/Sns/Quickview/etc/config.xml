<?xml version="1.0"?>
<config>
	<global>
		<models>
            <quickview>
                <class>Sns_Quickview_Model</class>
            </quickview>
        </models>
		<blocks>
            <quickview>
                <class>Sns_Quickview_Block</class>
            </quickview>
        </blocks>
		<helpers>
            <quickview>
                <class>Sns_Quickview_Helper</class>
            </quickview>
        </helpers>
        <resources>
        	<quickview_setup>
        		<setup>
        			<module>Sns_Quickview</module>
        		</setup>
        	</quickview_setup>
        </resources>
	</global>
	<frontend>
        <routers>
			<quickview>
                <use>standard</use>
                <args>
                    <module>Sns_Quickview</module>
                    <frontName>quickview</frontName>
                </args>
            </quickview>
        </routers>
		<layout>
            <updates>
                <quickview module="Sns_Quickview">
					<file>sns/quickview.xml</file>
                </quickview>
            </updates>
        </layout>
        <translate>
      		<modules>
          		<Sns_Quickview>
                     <files>
                          <default>Sns_Quickview.csv</default>
                     </files>
                </Sns_Quickview>
            </modules>
        </translate>
	</frontend>
	<adminhtml>
        <translate>
      		<modules>
          		<Sns_Quickview>
                     <files>
                          <default>Sns_Quickview.csv</default>
                     </files>
                </Sns_Quickview>
            </modules>
        </translate>
		<menu>
			<snstheme>
				<title>SNS Theme</title>
				<sort_order>87</sort_order>
				<children>
					<quickview>
						<title>SNS Quickview</title>
						<sort_order>87</sort_order>
						<action>adminhtml/system_config/edit/section/quickview/</action>
					</quickview>
				</children>
			</snstheme>
		</menu>
		<acl>
			<resources>
				<admin>
					<children>
						<system>
							<children>
								<config>
									<children>
										<quickview translate="title" module="quickview">
											<title>SNS Quickview Settings</title>
										</quickview>
									</children>
								</config>
							</children>
						</system>
					</children>
				</admin>
			</resources>
		</acl>
	</adminhtml>
	<default>
        <quickview>
			<general>
                 <enable><![CDATA[1]]></enable>
                 <popup_height><![CDATA[380px]]></popup_height>
                 <popup_width><![CDATA[800px]]></popup_width>
                 <selector_qv><![CDATA[.item div.quickview-wrap]]></selector_qv>
            </general>
        </quickview>
    </default>
</config>