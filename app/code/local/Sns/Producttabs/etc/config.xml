<?xml version="1.0"?>
<config>
	<global>
		<models>
            <producttabs>
                <class>Sns_Producttabs_Model</class>
            </producttabs>
        </models>
		<blocks>
            <producttabs>
                <class>Sns_Producttabs_Block</class>
            </producttabs>
        </blocks>
		<helpers>
            <producttabs>
                <class>Sns_Producttabs_Helper</class>
            </producttabs>
        </helpers>
        <resources>
        	<producttabs_setup>
        		<setup>
        			<module>Sns_Producttabs</module>
        		</setup>
        	</producttabs_setup>
        </resources>
	</global>
	<frontend>
        <routers>
			<producttabs>
                <use>standard</use>
                <args>
                    <module>Sns_Producttabs</module>
                    <frontName>producttabs</frontName>
                </args>
            </producttabs>
        </routers>
		<layout>
            <updates>
                <producttabs module="Sns_Producttabs">
					<file>sns/producttabs.xml</file>
                </producttabs>
            </updates>
        </layout>
        <translate>
      		<modules>
          		<Sns_Producttabs>
                     <files>
                          <default>Sns_Producttabs.csv</default>
                     </files>
                </Sns_Producttabs>
            </modules>
        </translate>
	</frontend>
	<adminhtml>
        <translate>
      		<modules>
          		<Sns_Producttabs>
                     <files>
                          <default>Sns_Producttabs.csv</default>
                     </files>
                </Sns_Producttabs>
            </modules>
        </translate>
		<menu>
			<snstheme>
				<title>SNS Theme</title>
				<sort_order>87</sort_order>
				<children>
					<producttabs>
						<title>Sns Product Tabs</title>
						<sort_order>87</sort_order>
						<action>adminhtml/system_config/edit/section/producttabs_cfg/</action>
					</producttabs>
				</children>
			</snstheme>
		</menu>
		<acl>
			<resources>
				<admin>
					<children>
						<system>
							<children>
								<config>
									<children>
										<producttabs_cfg translate="title" module="producttabs">
											<title>Sns Product Tabs Settings</title>
										</producttabs_cfg>
									</children>
								</config>
							</children>
						</system>
					</children>
				</admin>
			</resources>
		</acl>
	</adminhtml>
	<default>
		<producttabs_cfg>
			<advanced>
			     <devices_mobilelandscape><![CDATA[1]]></devices_mobilelandscape>
			     <devices_mobileportrait><![CDATA[1]]></devices_mobileportrait>
			     <devices_normal><![CDATA[3]]></devices_normal>
			     <devices_tabletlandscape><![CDATA[3]]></devices_tabletlandscape>
			     <devices_tabletportrait><![CDATA[2]]></devices_tabletportrait>
			     <devices_wide><![CDATA[3]]></devices_wide>
			     <posttext><![CDATA[]]></posttext>
			     <pretext><![CDATA[]]></pretext>
			</advanced>
			<general>
			     <effects><![CDATA[zoomOut]]></effects>
			     <isenabled><![CDATA[1]]></isenabled>
			     <show_number_loadmore><![CDATA[0]]></show_number_loadmore>
			     <title><![CDATA[New Products]]></title>
			</general>
			<product_display_setting>
			     <item_cart_disp><![CDATA[1]]></item_cart_disp>
			     <item_compare_disp><![CDATA[1]]></item_compare_disp>
			     <item_description_keeptags><![CDATA[]]></item_description_keeptags>
			     <item_description_striptags><![CDATA[1]]></item_description_striptags>
			     <item_desc_display><![CDATA[0]]></item_desc_display>
			     <item_desc_max_characs><![CDATA[150]]></item_desc_max_characs>
			     <item_image_height><![CDATA[190]]></item_image_height>
			     <item_image_width><![CDATA[170]]></item_image_width>
			     <item_price_disp><![CDATA[1]]></item_price_disp>
			     <item_review_disp><![CDATA[1]]></item_review_disp>
			     <item_title_display><![CDATA[1]]></item_title_display>
			     <item_title_max_characs><![CDATA[30]]></item_title_max_characs>
			     <item_wishlist_disp><![CDATA[1]]></item_wishlist_disp>
			</product_display_setting>
			<product_selection>
			     <list_products_by><![CDATA[category]]></list_products_by>
			     <number_per_display><![CDATA[6]]></number_per_display>
			     <number_per_loadmore><![CDATA[3]]></number_per_loadmore>
			     <product_category><![CDATA[39,42,79,81]]></product_category>
			     <product_order_by><![CDATA[created_at]]></product_order_by>
			     <product_order_dir><![CDATA[desc]]></product_order_dir>
			</product_selection>
		</producttabs_cfg> 
    </default>
</config>
